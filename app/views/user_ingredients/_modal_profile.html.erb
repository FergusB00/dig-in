  <div class="text-center">
    <button type="button" class="btn add-items-button" data-bs-toggle="modal" data-bs-target="#ingredient">
      +ADD ITEMS
    </button>
  </div>

<div class="modal fade" id="ingredient" tabindex="-1" role="dialog" aria-labelledby="ingredient" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content styled-modal">
      <div class="modal-header">
        <h5 class="modal-title" id="ingredient">Add ingredients</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>


      <div class="modal-body">

        <!-- Barcode scanner -->
        <h5 class="manual-upload-title">Scan an item</h4>
        <div data-controller="barcode" data-barcode-api-value="<%= ENV['BARCODE_API_KEY'] %>">
            <button data-action='click->barcode#captureCode'>capture</button>
            <button data-action='click->barcode#resetButton'>reset</button>
            <video id="video" style="width: 100dvw; border: 1px solid gray;"></video>
        </div>

        <!-- Manual upload -->
        <h5 class="manual-upload-title">Manual upload</h4>
        <%= simple_form_for(user_ingredient, html: { class: "user-ingredient-form" }) do |f| %>
          <div class="form-group" >
            <label for="ingredient-name">Ingredient:</label>
            <%= f.association :ingredient, collection: Ingredient.all, label: false, placeholder: "Enter your ingredient", class: "user-ingredient-form-control",
            input_html: {data: {controller: "tom-select"}} %>
          </div>
          <div class="form-group">
            <label for="weight">Weight:</label>
            <%= f.input :quantity, label: false, class: "user-ingredient-form-control" %>
          </div>
          <div class="form-group">
            <label for="unit">Unit:</label>
            <%= f.input :unit, collection: %w[g kg ml l], label: false, class: "user-ingredient-form-control" %>
          </div>
          <div class="form-group">
            <label for="price">Price:</label>
            <%= f.input :price_in_pounds, label: false, placeholder: "Â£", class: "user-ingredient-form-control", input_html: {step: "0.01"} %>
          </div>
          <div class="form-group">
            <label for="expiry-date">Expiry:</label>
            <%= f.input :expiry_date, label: false, placeholder: "Please enter expiry date (dd/mm/yyyy)", class: "user-ingredient-form-control" %>
          </div>
          <div class="modal-footer modal-btn-alignment">
            <%= f.button :submit, "Done", class: "btn modal-done-btn" %>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
