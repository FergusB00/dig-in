<!-- Button trigger modal -->
<div class="text-center">
  <button type="button" class="btn add-items-button" data-toggle="modal" data-target="#exampleModal">
    +ADD ITEMS
  </button>
</div>

<!-- Modal -->
<div class="modal fade" id="ingredient" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">ingredient</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(ingredient) do |f| %>
          <%= f.input :name %>
          <%= f.input :catergory %>
          <%= f.input :carbon_per_gram %>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= f.button :submit, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
